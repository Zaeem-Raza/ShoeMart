@model ShoeMart.Models.Entities.Users;

<section class="h-screen flex justify-center items-center bg-white">
    <div class="w-full max-w-md bg-white rounded-lg shadow-xl dark:bg-gray-800 space-y-2">
        <div class="px-4 py-6">
            @* Avatar *@
            <div class="flex items-center justify-center">
                <img class="object-cover w-12 h-12 rounded-full" src="~/images/running-shoes.png" alt="Avatar" />
            </div>
            <h3 class="mt-3 text-xl font-medium text-center text-black dark:text-gray-200">Welcome Back</h3>
            <p class="mt-1 text-center text-gray-500 dark:text-gray-400">Login or create account</p>
            @* Form *@
            <form action="/Users/Login" method="post">
                <div class="w-full mt-4">
                    <input type="email" name="Email" placeholder="Email Address" value="@Model.Email" required class="form-input-style" />
                </div>

                <div class="w-full mt-4">
                    <input type="password" name="Password" placeholder="Password" value="@Model.PasswordHash" required class="form-input-style" />
                </div>

                <div class="flex items-center justify-end mt-4">
                    <a href="#" class="text-sm text-gray-600 dark:text-gray-200 hover:text-gray-500 hidden">Forget Password?</a>

                    <button class="button self-end">
                        Sign In
                    </button>
                </div>
            </form>
        </div>
        <div class="flex items-center justify-center py-4 text-center bg-gray-50 dark:bg-gray-700">
            <span class="text-sm text-gray-600 dark:text-gray-200">Don't have an account? </span>
            <a href="/users/signup" class="mx-2 text-sm font-bold text-black-500 dark:text-blue-400 hover:underline">Register</a>
        </div>
    </div>
</section>
