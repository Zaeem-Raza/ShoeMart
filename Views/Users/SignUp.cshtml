@model ShoeMart.Models.Entities.Users;

<section class="h-screen flex justify-center items-center bg-white">
    <div class="w-full max-w-md mx-auto bg-white rounded-lg shadow-xl dark:bg-gray-800 space-y-2">
        <div class="px-4 py-6">
            <h1>@ViewBag.Message</h1>
            @* Avatar *@
            <div class="flex items-center justify-center">
                <img class="object-cover w-12 h-12 rounded-full" src="~/images/running-shoes.png" alt="Avatar" />
            </div>
            <h3 class="mt-3 text-xl font-medium text-center text-black dark:text-gray-200">Welcome</h3>
            <p class="mt-1 text-center text-gray-500 dark:text-gray-400">Create new account</p>
            
            @* Form *@
            <form action="/Users/SignUp" method="post" enctype="multipart/form-data">

                @* Name *@
                <div class="w-full mt-4">
                    <input type="text" name="Name" placeholder="Name" value="@Model?.UserName" required class="form-input-style" />
                </div>

                @* Email *@
                <div class="w-full mt-4">
                    <input type="email" name="Email" placeholder="Email Address" value="@Model?.Email" required class="form-input-style" />
                </div>

                @* Password *@
                <div class="w-full mt-4">
                    <input type="password" name="Password" placeholder="Password" value="@Model?.PasswordHash" required class="form-input-style" />
                </div>

                @* Phone *@
                <div class="w-full mt-4">
                    <input type="text" name="PhoneNumber" placeholder="Phone Number" value="@Model?.PhoneNumber" required class="form-input-style" />
                </div>

                <!-- Address -->
                <div class="w-full mt-4">
                    <input type="text" name="Address" placeholder="Address" value="@Model?.Address" required class="form-input-style" />
                </div>

                <div class="flex items-center justify-end mt-4">
                    <a href="#" class="text-sm text-gray-600 dark:text-gray-200 hover:text-gray-500 hidden">Forget Password?</a>
                    <button class="button">
                        Sign Up
                    </button>
                </div>
            </form>
        </div>
        <div class="flex items-center justify-center py-4 text-center bg-gray-50 dark:bg-gray-700">
            <span class="text-sm text-gray-600 dark:text-gray-200">Already have an account? </span>
            <a href="/users/login" class="mx-2 text-sm font-bold text-black-500 dark:text-blue-400 hover:underline">Login</a>
        </div>
    </div>
</section>
