@{
    string cartItems = ViewBag.CartItems <= 9 ? $"0{ViewBag.CartItems}" : ViewBag.CartItems;
}

<nav class="border-b py-4">
    <div class="w-full px-4 md:px-6 lg:px-8 lg:max-w-6xl mx-auto">
        <div class="flex flex-col gap-y-4 md:flex-row md:items-center md:justify-between">
            <!-- Logo -->
            <h1>
                <a href="/Home/Index" class="flex items-center gap-2 relative top-[2px]">
                    Shoemart
                    <img class="w-auto h-7" src="/images/running-shoes.png" alt="fdghf">
                </a>
            </h1>
            <!-- Search input on desktop screen -->
            <div class="md:mx-10 md:w-[20rem] md:w-[25rem]">
                <div class="relative">
                    <span class="absolute inset-y-0 left-0 flex items-center pl-3">
                        <svg class="w-5 h-5 text-gray-400" viewBox="0 0 24 24" fill="none">
                            <path d="M21 21L15 15M17 10C17 13.866 13.866 17 10 17C6.13401 17 3 13.866 3 10C3 6.13401 6.13401 3 10 3C13.866 3 17 6.13401 17 10Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"></path>
                        </svg>
                    </span>

                    <input id="searchInput" name="search" type="text" class="w-full py-2 pl-10 pr-4 text-gray-700 bg-white border rounded-md dark:bg-gray-800 dark:text-gray-300 dark:border-gray-600 focus:border-blue-400 dark:focus:border-blue-300 focus:outline-none focus:ring focus:ring-opacity-40 focus:ring-blue-300" placeholder="Search">
                </div>
            </div>
            <!-- Links -->
            <div class="flex items-center justify-between sm:gap-6">
                <a href="/ShoppingCart/Index" class="relative text-gray-700 transition-colors duration-300 transform dark:text-gray-200 hover:text-gray-600 dark:hover:text-gray-300 hover:scale-105 transition-all">
                    <svg class="w-6 h-6" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M3 3H5L5.4 5M7 13H17L21 5H5.4M7 13L5.4 5M7 13L4.70711 15.2929C4.07714 15.9229 4.52331 17 5.41421 17H17M17 17C15.8954 17 15 17.8954 15 19C15 20.1046 15.8954 21 17 21C18.1046 21 19 20.1046 19 19C19 17.8954 18.1046 17 17 17ZM9 19C9 20.1046 8.10457 21 7 21C5.89543 21 5 20.1046 5 19C5 17.8954 5.89543 17 7 17C8.10457 17 9 17.8954 9 19Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                    </svg>
                    <span id="cartIcon" class="absolute bottom-4 left-3 py-1 px-2 text-xs text-white bg-blue-500 rounded-full">@cartItems</span>
                </a>
                <div class="flex items-center justify-center border-black hover:cursor-pointer group gap-4">
                    <a href="/Users/Index">
                        <img src="@ViewBag.Image" alt="Avatar" class="object-cover w-8 h-8 rounded-full group-hover:scale-105 transition-all" />
                    </a>
                    @if (ViewBag.Role == "Admin")
                    {
                        <span>Hello, @ViewBag.Name</span>
                    }
                    <form action="Identity/Account/Logout" method="get">
                        <button class="hover:scale-105 transition-all">
                            <img src="~/images/icons8-logout-24.png" />
                        </button>
                    </form>
                    
                </div>
            </div>
        </div>
    </div>
</nav>