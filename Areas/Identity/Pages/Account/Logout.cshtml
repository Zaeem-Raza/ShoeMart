@page
@model LogoutModel
@{
    ViewData["Title"] = "Log out";
}

<header class="flex justify-between items-center py-4 px-6 bg-gray-800 text-white">
    <h1 class="text-xl font-bold">@ViewData["Title"]</h1>

    @if (User.Identity?.IsAuthenticated ?? false)
    {
        <form class="flex items-center" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
            <button type="submit" class="px-3 py-2 text-sm font-medium text-center text-white bg-blue-600 rounded hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                Log out
            </button>
        </form>
    }
    else
    {
        <p class="text-sm text-gray-400">You have successfully logged out of the application.</p>
    }
</header>